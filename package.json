{
  "name": "ts-auth",
  "type": "module",
  "version": "0.4.0",
  "description": "Native WebAuthn and OTP authentication library built with Bun.",
  "author": "Chris Breuer <chris@stacksjs.org>",
  "license": "MIT",
  "homepage": "https://github.com/stacksjs/ts-auth#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stacksjs/ts-auth.git"
  },
  "bugs": {
    "url": "https://github.com/stacksjs/ts-auth/issues"
  },
  "keywords": ["typescript", "webauthn", "passkeys", "totp", "2fa", "authentication", "otp", "bun"],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./*": {
      "import": "./dist/*"
    }
  },
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "auth": "./dist/bin/cli.js"
  },
  "files": ["README.md", "dist"],
  "scripts": {
    "build": "bun --bun build.ts && bun run compile",
    "compile": "bun build ./bin/cli.ts --compile --minify --outfile bin/auth",
    "compile:all": "bun run compile:linux-x64 && bun run compile:linux-arm64 && bun run compile:windows-x64 && bun run compile:darwin-x64 && bun run compile:darwin-arm64",
    "compile:linux-x64": "bun build ./bin/cli.ts --compile --minify --target=bun-linux-x64 --outfile bin/auth-linux-x64",
    "compile:linux-arm64": "bun build ./bin/cli.ts --compile --minify --target=bun-linux-arm64 --outfile bin/auth-linux-arm64",
    "compile:windows-x64": "bun build ./bin/cli.ts --compile --minify --target=bun-windows-x64 --outfile bin/auth-windows-x64.exe",
    "compile:darwin-x64": "bun build ./bin/cli.ts --compile --minify --target=bun-darwin-x64 --outfile bin/auth-darwin-x64",
    "compile:darwin-arm64": "bun build ./bin/cli.ts --compile --minify --target=bun-darwin-arm64 --outfile bin/auth-darwin-arm64",
    "zip": "bun run zip:all",
    "zip:all": "bun run zip:linux-x64 && bun run zip:linux-arm64 && bun run zip:windows-x64 && bun run zip:darwin-x64 && bun run zip:darwin-arm64",
    "zip:linux-x64": "zip -j bin/auth-linux-x64.zip bin/auth-linux-x64",
    "zip:linux-arm64": "zip -j bin/auth-linux-arm64.zip bin/auth-linux-arm64",
    "zip:windows-x64": "zip -j bin/auth-windows-x64.zip bin/auth-windows-x64.exe",
    "zip:darwin-x64": "zip -j bin/auth-darwin-x64.zip bin/auth-darwin-x64",
    "zip:darwin-arm64": "zip -j bin/auth-darwin-arm64.zip bin/auth-darwin-arm64",
    "fresh": "bunx rimraf node_modules/ bun.lock && bun i",
    "prepublishOnly": "bun --bun run build && bun run compile:all && bun run zip",
    "test": "bun test",
    "lint": "bunx --bun pickier run",
    "lint:fix": "bunx --bun pickier run --fix",
    "format": "bunx --bun pickier run --mode format --write",
    "format:check": "bunx --bun pickier run --mode format --check",
    "changelog": "bunx logsmith --verbose",
    "changelog:generate": "bunx logsmith --output CHANGELOG.md",
    "release": "bun run changelog:generate && bunx bumpx prompt --recursive",
    "postinstall": "bunx git-hooks",
    "dev:docs": "bun --bun vitepress dev docs",
    "build:docs": "bun --bun vitepress build docs",
    "preview:docs": "bun --bun vitepress preview docs",
    "typecheck": "bun --bun tsc --noEmit"
  },
  "dependencies": {
    "@stacksjs/qrx": "link:@stacksjs/qrx"
  },
  "devDependencies": {
    "better-dx": "^0.2.5"
  },
  "git-hooks": {
    "pre-commit": {
      "staged-lint": {
        "*.{js,ts,json,yaml,yml,md}": "bunx pickier run --fix"
      }
    },
    "commit-msg": "bunx gitlint --edit .git/COMMIT_EDITMSG"
  }
}
